generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String @id @default(uuid()) @map("_id")
  firstName String
  lastName  String
  email     String @unique
  username  String @unique
  password  String

  image    String?
  bio      String?
  location String?

  created_at DateTime @default(now())

  @@map("users")
}
